<?xml version="1.0" encoding="utf-8"?>
<config>
	<inlinehelp button="show"/>
	<fieldset
		name="test1"
		label="COM_TEST1_FIELD_CONFIG_LABEL"
		description="COM_TEST1_FIELD_CONFIG_DESC"
		addfieldprefix="User\Component\Test1\Administrator\Field"
		>
		
		<field
			name="custom_fields_enable"
			type="radio"
			label="JGLOBAL_CUSTOM_FIELDS_ENABLE_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="1"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="uf1"
			type="Uf1"
			label="MOD_TEST1_UF1_LABEL"
			description="MOD_TEST1_UF1_DESCRIPTION"
		/>
		
		<field name="c1" 
		  type="color" 
		  default="#eee" 
		  format="rgba"
		  label="MOD_TEST1_C1_LABEL"
		  description="MOD_TEST1_C1_DESCRIPTION" 
		/>


	</fieldset>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			validate="rules"
			filter="rules"
			component="com_test1"
			section="component"
		/>
	</fieldset>
</config>
